{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/assets/*", "*.css", "*.js", "*.png", "*.jpg", "*.svg", "*.ico", "*.map"]
  },
  "routes": [
    {
      "route": "/assets/*.js",
      "headers": {
        "content-type": "text/javascript; charset=utf-8"
      }
    },
    {
      "route": "/*.js",
      "headers": {
        "content-type": "text/javascript; charset=utf-8"
      }
    },
    {
      "route": "/assets/*.css",
      "headers": {
        "content-type": "text/css; charset=utf-8"
      }
    },
    {
      "route": "/*.css",
      "headers": {
        "content-type": "text/css; charset=utf-8"
      }
    }
  ],
  "mimeTypes": {
    ".js": "text/javascript",
    ".mjs": "text/javascript",
    ".css": "text/css",
    ".json": "application/json"
  },
  "responseOverrides": {
    "404": {
      "rewrite": "/index.html",
      "statusCode": 200
    }
  }
}

